---
interface Props {
	link: string
}
const { link } = Astro.props
---

<section
	class="border-black border-4 border-t-0 border-b-[16px] bg-gray-100 flex flex-col-reverse md:flex-row"
>
	<div class="px-12 py-24 space-y-8">
		<h1 class="text-5xl font-semibold">Minimalism is the new cool</h1>
		<p class="text-xl">Why? ... Because I say so!</p>
		<a href={link} class="inline-block px-5 py-4 border-black border-4 font-bold"> Click here</a>
	</div>
	<div
		class="bg-yellow-300 px-12 py-24 space-y-6 flex-1 border-b-4 md:border-b-0 md:border-l-4 border-black flex-col flex justify-center items-center"
	>
		<i class="fa-regular fa-face-kiss-wink-heart text-9xl w-32"></i>
	</div>
</section>
